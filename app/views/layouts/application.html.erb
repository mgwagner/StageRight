<!DOCTYPE html>
<html>
  <head>
    <title>StageRight</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header>
  <nav class="navbar fixed-top navbar-dark bg-dark navbar-expand-lg navbar-template flex-column flex-md-row">
    <a class="navbar-brand"><%= image_tag("Avatar.jpg", class: "img-thumbnail" ) %></a>
    <div class="navbar-nav-scroll">
      <ul class="navbar-nav flex-row"> 
        <% if signed_in? %>
          <li class="nav-item">Signed in as: <%= current_user.email %></li>
          <li class="nav-item"><%= button_to 'Sign out', sign_out_path, method: :delete%></li>
          <!-- {:class => "nav-link px-2"} -->
        <% else %>
          <li class="nav-item"><%= link_to 'Sign in', sign_in_path, {:class => "nav-link px-2"} %> </li>
        <% end %>
      </ul>
    </div>
      <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
          <li class="nav-item"><a class="nav-link px-2" href="#">Contacts</a></li>
          <li class="nav-item active"><a class="nav-link px-2" href="#">Script</a></li>
          <li class="nav-item"><a class="nav-link px-2" href="#">Files</a></li>
      </ul>
  </nav>
</header>
    <section>
        <div id="flash">
          <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
        <% end %>
      </div>
    <%= yield %>
    </section>
  </body>
</html>

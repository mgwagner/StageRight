<nav class="navbar fixed-top navbar-dark bg-dark navbar-expand-lg navbar-template">
    <a class="navbar-brand"><%= image_tag("Avatar.jpg", class: "img-thumbnail" ) %></a>
    <div class="d-flex flex-row order-2 order-lg-3">
        <ul class="navbar-nav flex-row">
            <li class="nav-item"><a class="nav-link px-2" href="#">Contacts</a></li>
            <li class="nav-item active"><a class="nav-link px-2" href="#">Script</a></li>
            <li class="nav-item"><a class="nav-link px-2" href="#">Files</a></li>
        </ul>
    </div>
</nav>

<div class="container">
    <% if @hasText %>
	   <div class="page-header text-center">
		  <h1>Name of Project</h1>
	   </div>
	   <div class="clickable">
		  <%= simple_format(@text) %>
	   </div>
    <% else %>
        <div class="page-header text-center">
            <h1>New Project</h1>
        </div>
        <%= form_tag({action: :upload}, multipart: true) do %>
        <div class="form-group">
            <%= label_tag(:s, "Upload Script") %>
            <br>
            <label class="btn btn-secondary" for="my-file-selector">
                <input id="my-file-selector" type="file" style="display:none;"> Choose File
            </label>
        </div>
        <div class="form-group">
            <%= label_tag(:q, "Project Name") %>
            <%= text_field_tag(:q, "", class: "form-control") %>
        </div>

            <%= submit_tag("Upload", class: "btn btn-primary") %>
        <% end %>
    <% end %>
</div>






<div class="container">
    <% if @hasText %>
	   <div class="page-header text-center">
		  <h1>Name of Project</h1>
	   </div>
	   <div class="clickable">
		  <%= simple_format(@text) %>
	   </div>
    <% else %>
        <div class="page-header text-center">
            <h1>New Project</h1>
        </div>
        <%= form_tag({action: :upload}, multipart: true) do %>
        <div class="form-group">
            <%= label_tag(:s, "Upload Script") %>
            <br>
            <label class="btn btn-secondary" for="my-file-selector">
                <input id="my-file-selector" type="file" style="display:none;"> Choose File
            </label>
        </div>
        <div class="form-group">
            <%= label_tag(:q, "Project Name") %>
            <%= text_field_tag(:q, "", class: "form-control") %>
        </div>

            <%= submit_tag("Upload", class: "btn btn-primary") %>
        <% end %>
    <% end %>
</div>

<div class="modal" id="Cueinput" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Cue Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
            <label for="CueType">Cue Type</label>
            <input type="text" class="form-control" id="CueType" placeholder="e.g. LQ, SQ, etc...">
        </div>
        <div class="form-group">
            <label for="CueLabel">Cue Label</label>
            <input type="text" class="form-control" id="CueLabel" placeholder="e.g. 100, A, etc...">
        </div>
        <div class="form-group">
            <label for="CueDescription">Cue Description</label>
            <input type="text" class="form-control" id="CueDescription" placeholder="optional">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="submit">Submit</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



